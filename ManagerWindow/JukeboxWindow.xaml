<Window x:Class="Juke.UI.Wpf.JukeboxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Juke.UI.Wpf"
        mc:Ignorable="d"
        Title="J.U.K.E. for Windows" Height="800" Width="800" Loaded="Window_Loaded"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize"
        Closed="Window_Closed" WindowStartupLocation="CenterScreen"
        >
    <Border Background="Black" Padding="10" CornerRadius="10 10 10 10" MouseDown="Border_MouseDown">
        <Border Background="White" Padding="6" CornerRadius="10 10 10 10">
            <Grid x:Name="mainGrid">
                <Rectangle Fill="Transparent" Stroke="Gray" StrokeThickness="0.1" Margin="728,10,2,736"/>


                <Button Style="{StaticResource closeButtonStyle}" Content="X" BorderThickness="1" BorderBrush="DarkGray" x:Name="closeButton" Margin="730,10,10,736" Click="closeButton_Click"/>
                <Label x:Name="logoLabel" Style="{StaticResource titleStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="203" Margin="294,342,271,347" MouseDown="logoLabel_MouseDown">Loading...</Label>
                <TextBox x:Name="searchBox" Visibility="Hidden" HorizontalAlignment="Left" Height="39" Margin="51,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="684" FontSize="20" Background="#FFF1F1F1" TextChanged="searchBox_TextChanged" KeyDown="searchBox_KeyDown"/>
                <ListBox x:Name="songList" HorizontalAlignment="Left" Height="290" Margin="81,427,0,0" VerticalAlignment="Top" Width="654" Visibility="Hidden">
                    <ListBox.Background>
                        <SolidColorBrush Color="White"/>
                    </ListBox.Background>
                </ListBox>
                <Label x:Name="songLabel" BorderBrush="Black" BorderThickness="2" Style="{StaticResource labelStyle}" Opacity="0" Content="" HorizontalAlignment="Left" Margin="19,167,0,0" VerticalAlignment="Top" Height="157" Width="450" FontSize="22">
                    <Label.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="10" Opacity="0.4"/>
                    </Label.Effect>
                </Label>
                <ListBox x:Name="queueBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.PanningMode="HorizontalFirst" HorizontalContentAlignment="Left" ItemContainerStyle="{StaticResource selectedStyle}" BorderThickness="2" Opacity="0" HorizontalAlignment="Left" Height="357" Margin="474,64,0,0" VerticalAlignment="Top" Width="292"/>

                <ProgressBar x:Name="loadProgress" Height="20"  Background="White" Foreground="Black" Maximum="{Binding ProgressMax}" Minimum="0" Value="{Binding Progress}" Margin="0,738,0,10" />
            </Grid>
        </Border>
    </Border>
</Window>
